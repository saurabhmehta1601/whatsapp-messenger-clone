rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
  	function isGroupMember(userId, groupId){
    	let userExists = exists(/databases/$(database)/documents/users/$(userId)) ;    	
      let user = get(/databases/$(database)/documents/users/$(userId)).data ;
         
      return userExists && (groupIds is list) && (groupId in user.groupIds) ;
    }
  
    match /users/{userId} {
      allow create , read: if request.auth != null ;
    	allow update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /groups/{groupId} {
    	allow read, write: if request.auth != null  && isGroupMember(request.auth.uid, groupId);
    } 
  }
}